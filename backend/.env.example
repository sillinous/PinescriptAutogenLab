# PineLab Configuration

# Data directory (for SQLite database)
PINELAB_DATA=./data

# ==== Security Configuration (REQUIRED) ====

# Webhook security (generate with: python -c "import secrets; print(secrets.token_hex(32))")
WEBHOOK_SECRET=your_secret_key_here

# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here

# ==== Broker Configuration ====

# Alpaca API (get from https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_PAPER_TRADING=true

# ==== Server Configuration ====

API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==== Email Notifications (Optional) ====

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@pinelab.com

# ==== Logging Configuration ====

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==== Advanced Configuration ====

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Retry configuration
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY_SECONDS=1.0

# Order reconciliation
RECONCILIATION_INTERVAL_MINUTES=5
RECONCILIATION_WINDOW_HOURS=24
